<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/input_hint</item>
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:fontFamily">@font/light</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="CalenderViewDateCustomText">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/light</item>
    </style>

    <style name="CalenderViewWeekCustomText">
        <item name="android:textColor">@color/input_hint</item>
    </style>

    <style name="AddDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/input_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/light</item>
    </style>
</resources>