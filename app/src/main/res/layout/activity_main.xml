<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/top_card"
            android:elevation="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:src="@drawable/menu_ic"
                    app:tint="@color/white" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:src="@drawable/icons8_bell_96"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginVertical="90dp"
                    android:fontFamily="@font/light"
                    android:text="Hi, Leo!"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="150dp"
                    android:background="@drawable/input_style"
                    android:drawableLeft="@drawable/ic_baseline_search_24"
                    android:drawablePadding="10dp"
                    android:elevation="10dp"
                    android:fontFamily="@font/light"
                    android:hint="Search Tutorial Videos"
                    android:paddingLeft="20dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/input_hint"
                    android:textSize="20sp" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/main_imageView_analysisIC"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignStart="@+id/main_imageButton_analysis"
                    android:layout_alignEnd="@+id/main_imageButton_analysis"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="30dp"
                    android:elevation="15dp"
                    app:srcCompat="@drawable/camera_ic"
                    app:tint="@color/white" />

                <ImageView
                    android:id="@+id/main_imageView_videoIC"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_alignStart="@+id/main_imageButton_videos"
                    android:layout_alignTop="@+id/main_imageButton_videos"
                    android:layout_alignEnd="@+id/main_imageButton_videos"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="10dp"
                    android:elevation="15dp"
                    app:srcCompat="@drawable/folder_3"
                    app:tint="@color/white" />

                <ImageView
                    android:id="@+id/main_imageView_timerIC"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignStart="@+id/main_imageButton_timer"
                    android:layout_alignTop="@+id/main_imageButton_timer"
                    android:layout_alignEnd="@+id/main_imageButton_timer"
                    android:layout_alignBottom="@+id/main_imageButton_timer"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginBottom="25dp"
                    android:elevation="15dp"
                    app:srcCompat="@drawable/time"
                    app:tint="@color/white" />

                <ImageView
                    android:id="@+id/main_imageView_logsIC"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignStart="@+id/main_imageButton_logs"
                    android:layout_alignTop="@+id/main_imageButton_logs"
                    android:layout_alignEnd="@+id/main_imageButton_logs"
                    android:layout_alignBottom="@+id/main_imageButton_logs"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginBottom="25dp"
                    android:elevation="15dp"
                    app:srcCompat="@drawable/edit"
                    app:tint="@color/white" />

                <ImageView
                    android:id="@+id/main_imageView_settingsIC"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignStart="@+id/main_imageButton_settings"
                    android:layout_alignTop="@+id/main_imageButton_settings"
                    android:layout_alignEnd="@+id/main_imageButton_settings"
                    android:layout_alignBottom="@+id/main_imageButton_settings"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginBottom="25dp"
                    android:elevation="15dp"
                    app:srcCompat="@drawable/setting_lines"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/main_textView_analysis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/main_imageButton_analysis"
                    android:layout_alignEnd="@+id/main_imageButton_analysis"
                    android:layout_alignBottom="@+id/main_imageButton_analysis"
                    android:layout_marginStart="45dp"
                    android:layout_marginEnd="45dp"
                    android:layout_marginBottom="20dp"
                    android:elevation="15dp"
                    android:fontFamily="@font/light"
                    android:text="ANALYSIS"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/main_textView_videos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/main_imageButton_videos"
                    android:layout_alignEnd="@+id/main_imageButton_videos"
                    android:layout_alignBottom="@+id/main_imageButton_videos"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="20dp"
                    android:elevation="15dp"
                    android:fontFamily="@font/light"
                    android:text="VIDEOS"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp" />

                <ImageButton
                    android:id="@+id/main_imageButton_analysis"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/button"
                    android:elevation="10dp"
                    tools:ignore="SpeakableTextPresentCheck" />

                <ImageButton
                    android:id="@+id/main_imageButton_timer"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/button"
                    android:elevation="10dp"
                    tools:ignore="SpeakableTextPresentCheck" />

                <ImageButton
                    android:id="@+id/main_imageButton_videos"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_alignTop="@id/main_imageButton_analysis"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="230dp"
                    android:background="@drawable/button"
                    android:elevation="10dp"
                    tools:ignore="SpeakableTextPresentCheck" />

                <ImageButton
                    android:id="@+id/main_imageButton_logs"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginVertical="165dp"
                    android:background="@drawable/button"
                    android:elevation="10dp"
                    tools:ignore="SpeakableTextPresentCheck" />

                <ImageButton
                    android:id="@+id/main_imageButton_settings"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginVertical="320dp"
                    android:background="@drawable/button"
                    android:elevation="10dp"
                    tools:ignore="SpeakableTextPresentCheck" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
